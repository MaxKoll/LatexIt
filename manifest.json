{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "tblatex@xulforum.org",
      "strict_min_version": "78"
    }
  },
  "author": "Jonathan Protzenko",
  "name": "LaTeX It!",
  "description": "Convert LaTeX to inline images in the message composer.",
  "version": "0.8.1-dev-unofficial",
  "homepage_url": "https://github.com/protz/LatexIt/wiki",
  "icons": {
    "16": "skin/icon.svg",
    "24": "skin/icon.svg",
    "32": "skin/icon.svg",
    "48": "skin/icon.svg",
    "64": "skin/icon.svg",
    "96": "skin/icon.svg",
    "128": "skin/icon.svg"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "content/options-new.html"
  },
  "experiment_apis": {
    "WindowListener": {
      "schema": "api/WindowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "api/WindowListener/implementation.js"
      }
    },
    "LegacyPrefs": {
      "schema": "api/LegacyPrefs/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LegacyPrefs"]],
        "script": "api/LegacyPrefs/implementation.js"
      }
    },
    "LatexIt": {
      "schema": "api/LatexIt/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LatexIt"]],
        "script": "api/LatexIt/implementation.js"
      }
    }
  },
  "permissions": ["storage"]
}
